- hosts: all
  become: 'yes'
  tasks:
    - name: Update APT
      ansible.builtin.apt:
        update_cache: true
    - name: Install the latest version of Apache and python3
      ansible.builtin.package:
        name:
          - apache2
          - python3
        state: latest
    - name: Copy Apache configuration file
      ansible.builtin.copy:
        src: files/config/apache2.conf
        dest: /etc/apache2/apache.conf
        owner: root
        group: root
        mode: '0644'
    - name: Copy index.html file
      ansible.builtin.copy:
        src: files/site/index.html
        dest: /var/www/html/index.html
        owner: root
        group: root
        mode: '0644'
    - name: Create symbolic link for apache2.conf
      ansible.builtin.file:
       src: /home/danielgetahun46/Dfgetahun42-csc2510-infrastructure/files/config/apache2.conf
       dest: /etc/apache2/apache2.conf
       state: link
       force: yes
    - name: Create symbolic link for index.html
      ansible.builtin.file:
        src: /home/danielgetahun46/Dfgetahun42-csc2510-infrastructure/files/site/index.html
        dest: /var/www/html/index.html
        state: link
    - name: restart apache2 servers
      ansible.builtin.service:
        name: httpd
        state: restarted
